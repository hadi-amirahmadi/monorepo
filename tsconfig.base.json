{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@monorepo-shatel/api/util-interfaces": [
        "libs/api/util-interfaces/src/index.ts"
      ],
      "@monorepo-shatel/app3/ui-shared": ["libs/app3/ui-shared/src/index.ts"],
      "@monorepo-shatel/app3/utils-formatter": [
        "libs/app3/utils-formatter/src/index.ts"
      ],
      "@monorepo-shatel/feature-game-detail": [
        "libs/feature-game-detail/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
